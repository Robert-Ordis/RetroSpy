<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:RuntimeBinder="clr-namespace:Microsoft.CSharp.RuntimeBinder;assembly=Microsoft.CSharp" x:Class="RetroSpy.SetupWindow"
        Title="RetroSpy" Height="591.992" Width="602" Foreground="White" Background="#FF252526" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top">
            <Menu Width="Auto" Height="20">
                <MenuItem Header="_Tools">
                    <MenuItem x:Name="ReloadSkins" Header="Reload Skins" HorizontalAlignment="Left" Width="Auto"  Click="ReloadSkins_Click"/>
                </MenuItem>
                <MenuItem Header="_Options">
                    <MenuItem x:Name="AddRemove" Header="Add/Remove Sources..." HorizontalAlignment="Left" Width="Auto" Click="AddRemove_Click" />
                    <MenuItem x:Name="CustomSkinPath" Header="Custom Skin Path..." HorizontalAlignment="Left" Width="Auto"  Click="CustomSkinPath_Click"/>
                    <Separator/>
                    <MenuItem x:Name="KeybindingBehavior" Header="Legacy Keybinding Behavior" HorizontalAlignment="Left" Width="Auto" IsChecked="{Binding LegacyKeybindingBehavior}" Checked="KeybindingBehavior_Checked" Unchecked="KeybindingBehavior_Checked" IsCheckable="True" />
                    <MenuItem x:Name="FilterCOM" Header="Don't Filter COM Ports" HorizontalAlignment="Left" Width="Auto" IsChecked="{Binding FilterCOMPorts}" Checked="FilterCOM_Checked" Unchecked="FilterCOM_Checked" IsCheckable="True" />
                    <MenuItem x:Name="DoNotSavePassword" Header="Don't Save Passwords" HorizontalAlignment="Left" Width="Auto" IsChecked="{Binding DontSavePassword}" Checked="DoNotSavePassword_Checked" Unchecked="DoNotSavePassword_Checked" IsCheckable="True" />
                    <MenuItem x:Name="LagFix" Header="Need Lag Fix" HorizontalAlignment="Left" Width="Auto" IsChecked="{Binding UseLagFix}" Checked="LagFix_Checked" Unchecked="LagFix_Checked" IsCheckable="True" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem x:Name="About" Header="About" HorizontalAlignment="Left" Width="Auto" Click="About_Click" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <ComboBox Margin="145,37,10,0" SelectedIndex="0" VerticalAlignment="Top" BorderBrush="#FF252525" IsReadOnly="True"
                  SelectionChanged="SourceSelectComboBox_SelectionChanged"
                  ItemsSource="{Binding Sources.Items}"
                  DisplayMemberPath="Name"
                  SelectedValue="{Binding Sources.SelectedItem}" />
        <Label Content="Controller Source:" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16" />
        <Label Name="ComPortLabel" Content="COM Port:" HorizontalAlignment="Left" Margin="59,65,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
               Visibility="{Binding ComPortOptionVisibility}" />
        <Label Name="ControllerIdLabel" Content="Controller:" HorizontalAlignment="Left" Margin="59,65,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
               Visibility="{Binding XIAndGamepadOptionVisibility}" />
        <Label Name="MisterControllerIdLabel" Content="Controller:" HorizontalAlignment="Left" Margin="340,23,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
               Visibility="{Binding MisterGamepadOptionVisibility}" Grid.Row="1" />
        <ComboBox Name="MisterControllerIdCombo" Margin="425,27,90,0" VerticalAlignment="Top" BorderBrush="#FF252525" IsReadOnly="True"
                  ItemsSource="{Binding MisterGamepad.Items}"
                  SelectedValue="{Binding MisterGamepad.SelectedItem}"
                  Visibility="{Binding MisterGamepadOptionVisibility}" Grid.Row="1" />
        <Button Name="MiSTerPopulate" Content="Detect" Margin="512,0,10,402" Height="23" VerticalAlignment="Bottom" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF252526" Click="MiSTerPopulate_Click" Visibility="{Binding MisterGamepadOptionVisibility}" Grid.Row="1"/>
        <Label Name="HostnameLabel" Content="Hostname:" HorizontalAlignment="Left" Margin="59,67,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
               Visibility="{Binding SSHOptionVisibility}" />
        <ComboBox Name="ComPortCombo" Margin="145,71,10,0" VerticalAlignment="Top" BorderBrush="#FF252525" IsReadOnly="True"
                  ItemsSource="{Binding Ports.Items}"
                  SelectedValue="{Binding Ports.SelectedItem}"
                  Visibility="{Binding ComPortOptionVisibility}" SelectionChanged="ComPortCombo_SelectionChanged" />
        <ComboBox Name="ControllerIdCombo" Margin="145,71,10,0" VerticalAlignment="Top" BorderBrush="#FF252525" IsReadOnly="True"
                  ItemsSource="{Binding XIAndGamepad.Items}"
                  SelectedValue="{Binding XIAndGamepad.SelectedItem}"
                  Visibility="{Binding XIAndGamepadOptionVisibility}" />
        <TextBox Name="txtHostname" Margin="144,71,11,0" VerticalAlignment="Top" Height="24" Text="{Binding Hostname}" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF656565" TextAlignment="Left" Visibility="{Binding SSHOptionVisibility}" />
        <Label Content="Viewer Skin:" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16" Grid.Row="1" />
        <ListBox Margin="10,134,265,47" Background="#FF1D1D1D" Foreground="#FFCBCBCB" BorderBrush="#FF3E3E42" BorderThickness="2" FontFamily="Calibri" FontSize="16"
                 SelectedIndex="0"
                 ItemsSource="{Binding Skins.Items}"
                 DisplayMemberPath="Name"
                 SelectedValue="{Binding Skins.SelectedItem}" SelectionChanged="Skin_SelectionChanged" Grid.Row="1" />
        <TextBox Name="txtDelay" Margin="145,27,265,0" VerticalAlignment="Top" Height="24    " Text="{Binding DelayInMilliseconds}" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF656565" TextAlignment="Right" Grid.Row="1" />
        <Button Name="goButton" Content="Go!" Margin="10,0,10,10" Height="23" VerticalAlignment="Bottom" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF252526" Click="GoButton_Click" Grid.Row="1" />
        <ListBox Margin="0,134,10,47" Background="#FF1D1D1D" Foreground="#FFCBCBCB" BorderBrush="#FF3E3E42" BorderThickness="2" FontFamily="Calibri" FontSize="16"
        	SelectedIndex="0"
        	ItemsSource="{Binding Backgrounds.Items}"
        	DisplayMemberPath="Name"
        	SelectedValue="{Binding Backgrounds.SelectedItem}" HorizontalAlignment="Right" Width="250" Grid.Row="1" />
        <Label x:Name="DelayLabel" Content="Delay (ms):" HorizontalAlignment="Left" Margin="54,23,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16" Grid.Row="1" />
        <CheckBox x:Name="staticViewerNameCheckbox" Content="Static View Window Name&#xD;&#xA;" IsChecked="{Binding StaticViewerWindowName}" HorizontalAlignment="Left" Margin="382,105,0,0" VerticalAlignment="Top" Width="202" Foreground="White" FontSize="16" FontFamily="Calibri" Height="24" Grid.Row="1" />
        <Label x:Name="ComPort2Label_Copy" Content="COM Port 2:" HorizontalAlignment="Left" Margin="49,103,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
            Visibility="{Binding ComPort2OptionVisibility}" Grid.RowSpan="2" />
        <ComboBox Name="ComPort2Combo" Margin="145,105,10,0" VerticalAlignment="Top" BorderBrush="#FF252525" IsReadOnly="True"
                  ItemsSource="{Binding Ports2.Items}"
                  SelectedValue="{Binding Ports2.SelectedItem}"
                  Visibility="{Binding ComPort2OptionVisibility}" SelectionChanged="ComPortCombo_SelectionChanged" Grid.RowSpan="2" />
        <Label x:Name="UsernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="57,103,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
            Visibility="{Binding SSHOptionVisibility}" Grid.RowSpan="2" />
        <TextBox x:Name="txtUsername" Margin="145,105,266,0" VerticalAlignment="Top"  Text="{Binding Username}" Height="24" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF656565" TextAlignment="Left" Visibility="{Binding SSHOptionVisibility}" Grid.RowSpan="2" />
        <Label x:Name="PasswordLabel" Content="Password:" HorizontalAlignment="Left" Margin="330,103,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
            Visibility="{Binding SSHOptionVisibility}" Grid.RowSpan="2" />
        <PasswordBox  x:Name="txtPassword" Margin="411,105,10,0" VerticalAlignment="Top" Height="24" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF656565" Visibility="{Binding SSHOptionVisibility}" Grid.RowSpan="2" />

        <Label x:Name="PlotterLabel" Content="Plotter:" HorizontalAlignment="Left" Margin="79,55,0,0" VerticalAlignment="Top" Foreground="#FFCBCBCB" FontFamily="Calibri" FontSize="16"
            RenderTransformOrigin="0.54,2.204" Grid.Row="1" />
        <TextBox x:Name="PlotterXmlForm" PreviewMouseLeftButtonDown="PlotterXml_Click" ToolTip="Click to select .xml file." Margin="145,59,11,0" VerticalAlignment="Top" Height="24" FontSize="16" FontFamily="Calibri" Background="#FF3E3E42" Foreground="#FFCBCBCB" BorderBrush="#FF656565" TextAlignment="Right" Grid.Row="1" />

    </Grid>
</Window>